<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:tag="frag1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mts.mts.MainMenu"
    android:background="#cfddf8">


    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView3"
        android:layout_below="@+id/spinner10"
        android:background="#8d33b5e5"
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="obr./min"
        android:id="@+id/textView4"
        android:background="#8d33b5e5"
        android:textSize="17dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView5"
        android:background="@android:color/holo_blue_light"
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView12"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="L/100km"
        android:id="@+id/textView6"
        android:background="@android:color/holo_blue_light"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="17dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:text="Čas vožnje:"
        android:id="@+id/textView7"
        android:background="#8d33b5e5"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_above="@+id/start1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="START"
        android:id="@+id/start1"
        android:textColor="#000000"
        android:textSize="50dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="klik"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="km/h"
        android:id="@+id/textView10"
        android:background="#8d33b5e5"
        android:textSize="26dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView11"
        android:background="#8d33b5e5"
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView10"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="km razdalje"
        android:id="@+id/textView12"
        android:background="@android:color/holo_blue_light"
        android:textSize="18dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView13"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView13"
        android:background="@android:color/holo_blue_light"
        android:textSize="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <Spinner
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:id="@+id/spinner10"
        android:layout_above="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:background="#4233b5e5" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="Izberite profil:"
        android:id="@+id/textView50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/spinner10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#2c33b5e5" />

</RelativeLayout>
